<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Harmony" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/black_background_gradient</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#161A24</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF2662</item>
        <item name="colorPrimaryVariant">#161A24</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF2662</item>
        <item name="colorSecondaryVariant">#FF2662</item>
        <item name="colorOnSecondary">#161A24</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">#161A24</item>
    </style>

    <style name="textPrimary" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:letterSpacing">0.167</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SettingsTitleText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.167</item>
    </style>
    <style name="SettingsPrimaryText">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="PinkRectBtn" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">204dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.167</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tabTextAppearance</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabGravity">start</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">#FF2662</item>
    </style>
    <style name="tabTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">#80FF2662</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.167</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>
</resources>