<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Harmony" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="textPrimary" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:letterSpacing">0.167</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SettingsTitleText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.167</item>
    </style>
    <style name="SettingsPrimaryText">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="PinkRectBtn" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">204dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.167</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>